package main;

import domain.HiloSimple;

public class Main {

	public static void main(String[] args) throws InterruptedException {
		
		HiloSimple hs = new HiloSimple("Hilo1", (int) (Math.random()*2000));
		hs.start();		
		//ahora le digo al hilo del m√©todo 'main' que espere hasta que termine el hilo 'hs'
		hs.join();		
		System.out.println("Saludo terminado");
		

	}

}
