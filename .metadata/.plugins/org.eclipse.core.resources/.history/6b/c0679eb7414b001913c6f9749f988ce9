dimension = int(input("Introduzca dimensión de la matriz: "))
matriz = []
for i in range(0, dimension): 
    matriz.append([0] * dimension)      
    for j in range(0, dimension):
        if i == j:           
            matriz[i][j] = 1       
print(matriz)


