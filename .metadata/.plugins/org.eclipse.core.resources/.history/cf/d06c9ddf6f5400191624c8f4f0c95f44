from statistics import mean

def media_lista(lista):
    series = 1    
    media = 0
    for i in range(len(lista)-1):
        if len(lista) > 0:
            media += mean(lista[i])
            
        else:
            media = 0
 
    return media


lista1 = [1, 2, 3, 4, 4] 
print(media_lista(lista1))
