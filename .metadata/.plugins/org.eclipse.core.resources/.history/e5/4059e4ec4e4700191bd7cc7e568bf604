package domain;

public class HiloSimple extends Thread{
	private String nombre;
	private int retardo;
	
	
	public HiloSimple(String s, int d) {
		super();
		nombre = s;
		retardo = d;
	}
	
	public void run() {
		System.out.println("Hola mundo - soy el 1");
		//retrasamos la ejecuci√≥n el tiempo especificado
		try {
			Thread.sleep(2000);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
	
	
}
